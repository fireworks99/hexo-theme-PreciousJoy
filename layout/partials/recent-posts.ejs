
<div id="recent-posts-box">

  <% if (page.posts.length > 0) { %>
  <div id="recent-posts">
    <!-- <h1>Recent Posts</h1> -->
    <% page.posts.sort('date', -1).limit(10).each(post => { %>
    
    <div class="recent-post-item">

      <a href="<%=url_for(post.path)%>" class="item-title"><%=post.title%></a>
      
      <time datetime="<%=post.date.toJSON()%>">
        <%=date(post.date)%>
      </time>
      
      <!-- <div class="article-digest"> -->
        <!-- <%- post.more.replace(/<\/?.+?\/?>/g, "").substring(0, 500) %> -->
        <!-- </div> -->

        <% if (post.excerpt) { %>
        <%- post.excerpt %>
        <% if (theme.excerpt_link) { %>
        <p class="article-more-link">
          <a href="<%- config.root %><%- post.path %>#more"><%= theme.excerpt_link %></a>
        </p>
        <% } %>
        <% } else { %>
        <%- post.content %>
        <% } %>


        <span>
          <a class="article-read" href="<%- config.root %><%- post.path %>"> Read more -->
          </span>
        </div>

        <% }); %>
      </div>
      <% } %>


      <div id="recent-posts-paginator">
        <%-paginator({
          prev_text: '',
          next_text: '',
          escape: false
        })%>
      </div>

    </div>
